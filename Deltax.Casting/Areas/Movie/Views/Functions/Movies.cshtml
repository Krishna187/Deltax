
@{
    ViewBag.Title = "Movies";
}


<div class="container-fluid">
    <div class="row">
        @*<div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sales Ratio</h4>
                        <div class="sales ct-charts mt-3"></div>
                    </div>
                </div>
            </div>*@
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#MovieModal">Add Movie</button>
                    @*<h6 class="card-subtitle">Add <code>.table-hover</code> to enable a hover state on table rows within a <code>&lt;tbody&gt;</code>.</h6>*@

                    <!-- Modal -->
                    <div id="MovieModal" class="modal fade" role="dialog">
                        <div class="modal-dialog">

                            <!-- Modal content-->
                            <div class="modal-content">
                                @using (Html.BeginForm("AddMovie", "Functions", FormMethod.Post, new { Area = "Movie" }))
                                {
                                    <div class="modal-header">
                                        <h4 class="modal-title">Add Movie</h4>
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>

                                    </div>
                                    <div class="modal-body">

                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true)


                                        <div class="form-group">
                                            <label>Name </label>
                                            @Html.TextBox("Name", "", new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label for="example-email"> Sex </label>
                                            @Html.DropDownList("Sex", sex as IEnumerable<SelectListItem>, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label>Bio</label>
                                            @Html.TextArea("Bio", new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label>Dob</label>
                                            @Html.TextBox("Dob", "", new { @class = "form-control " })
                                        </div>

                                    </div>
                                    <div class="modal-footer">
                                        <input type="submit" class="btn btn-default" value="Submit" />
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Bio</th>
                                <th scope="col">Date of Release</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td>Mark</td>
                                <td>Otto</td>
                                <td>@@mdo</td>
                            </tr>
                            <tr>
                                <th scope="row">2</th>
                                <td>Jacob</td>
                                <td>Thornton</td>
                                <td>@@fat</td>
                            </tr>
                            <tr>
                                <th scope="row">3</th>
                                <td colspan="2">Larry the Bird</td>
                                <td>@@twitter</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
